<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
    <h1 id="title">Welcome To Binary Generator</h1>
    <form id="centralSystem" action="/" method="post">
        <p>Please select your type:</p>
        <div id="radio">
            <input type="radio" id="word" name="fav_language" value="Word" required>
            <label for="word">Word</label><br>
            <input type="radio" id="sentence" name="fav_language" value="Sentence" required>
            <label for="sentence">Sentence</label><br>
            <input type="radio" id="paragraph" name="fav_language" value="Paragraph" required>
            <label for="paragraph">Paragraph</label>
        </div>
        <label for="size">Enter the size of the text:</label>
        <input type="number" id="size" name="size" required min="1" max="150" />
        <button type="submit">Generate</button>
    </form>
    <!-- Display Binary Output -->
    <div id="package">
        <h2>Generated Binary Text</h2>
        <textarea placeholder="Generated Text" id="result" readonly></textarea>
        <button onclick="copy()">Copy To ClipBoard</button>
    </div>
    <script>
         document.getElementById('centralSystem').addEventListener('submit', function(event) {
            event.preventDefault();

            let formData = new FormData(this);

            fetch("/", {
                method: "POST",
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => { throw new Error(text) });
                }
                return response.text();
            })
            .then(data => {
                document.getElementById("result").value = data;
            })
            .catch(error => {
                document.getElementById("result").value = 'Error: ' + error;
            });
        });



        function copy() {
            let result = document.getElementById("result");
            result.select();
            document.execCommand("copy");
        }
    </script>
</body>
</html>

